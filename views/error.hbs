{{> header title=(default title 'Error') }}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <h2 class="h4 mb-0">{{default title 'An Error Occurred'}}</h2>
                    </div>
                </div>
                <div class="card-body">
                    {{#if message}}
                        <h3 class="h5 text-danger mb-4">{{message}}</h3>
                    {{/if}}
                    
                    {{#if error.status}}
                        <div class="alert alert-warning">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                <span>Status Code: {{error.status}}</span>
                            </div>
                        </div>
                    {{/if}}

                    {{#if error.stack}}
                        <div class="mt-4">
                            <button class="btn btn-sm btn-outline-secondary mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#errorDetails" aria-expanded="false" aria-controls="errorDetails">
                                <i class="bi bi-code-square me-1"></i> Show Error Details
                            </button>
                            <div class="collapse" id="errorDetails">
                                <div class="card card-body bg-light">
                                    <pre class="mb-0 text-danger small"><code>{{error.stack}}</code></pre>
                                </div>
                            </div>
                        </div>
                    {{/if}}

                    <div class="mt-5 text-center">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>Return to Homepage
                        </a>
                        <button onclick="window.history.back()" class="btn btn-outline-secondary ms-2">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                </div>
                <div class="card-footer bg-light text-muted small">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Error occurred on: {{formatDate (now) 'MMMM D, YYYY h:mm A'}}</span>
                        <span>Request ID: {{default requestId 'N/A'}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer}}

<style>
    .error-container {
        min-height: 60vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;
    }
    pre {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 0.25rem;
        overflow-x: auto;
    }
</style>
